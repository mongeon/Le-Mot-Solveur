@page "/"
@inject NavigationManager NavigationManager
<PageTitle>Solveur</PageTitle>

<p­>
    Bienvenue sur Le Mot: Solveur
</p­>

<p>
    Un utilitaire pour vous aider à résoudre <a href="https://wordle.louan.me/" target="_blank">Le Mot</a>, la version française du jeu Wordle.
</p>


<p>
    <div class="form-floating">
        <input class="form-control" type="text" style="text-transform:uppercase" id="possCharacters" @bind=ExactCharacters />
        <label for="possCharacters">Lettres exactes (Utiliser _, * ou " "(Espace))</label>
    </div>
    <div class="form-floating">
        <input class="form-control" type="text" style="text-transform:uppercase" id="possCharacters" @bind=PossibleCharacters />
        <label for="possCharacters">Lettres potentielle</label>
    </div>
    <div class="form-floating">
        <input class="form-control" type="text" style="text-transform:uppercase" id="possCharacters" @bind=BadCharacters />
        <label for="possCharacters">Lettres non-présentes</label>
    </div>

    <button class="btn btn-primary" @onclick="Search">Recherche</button>
</p>

@if (IsSearching)
{
    <p> Chargement... </p>
}
else
{
    <div>@words.Count()&nbsp;mot(s)</div>

    <WordList Words="@words" />
}